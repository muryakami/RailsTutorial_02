<%= form_for [@journal, @task] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">
    <%= f.label :time %>
    <%= f.number_field :time, class: 'form-control' %>

    <%= f.label :detail %>
    <%= f.text_field :detail, class: 'form-control' %>
  </div>

  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>